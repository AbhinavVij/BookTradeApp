<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="305dp"
        android:layout_height="59dp"
        android:textColor="?attr/textAppearanceBody1"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Buy and Sell your books at best price"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#384D59"
        android:text="BUY"
        android:onClick="onBuyButtonClicked"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#384D59"
        android:text="SELL"
        android:onClick="onSellButtonClicked"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

    <TextView
        android:id="@+id/subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textColor="?attr/textAppearanceBody1"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"

        />
    <TextView
        android:id="@+id/home1"
        android:layout_width="100dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/subhead"
        app:layout_constraintTop_toBottomOf="@id/subhead"
        android:textColor="?attr/textAppearanceBody1"
        android:layout_marginTop="20dp"
        android:text="@string/home1"
        />
    <TextView
        android:id="@+id/home2"
        android:layout_width="100dp"
        android:textSize="25dp"
        android:layout_marginStart="28dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/home1"
        app:layout_constraintEnd_toStartOf="@id/home2"
        app:layout_constraintTop_toBottomOf="@id/subhead"
        android:textColor="?attr/textAppearanceBody1"
        android:layout_marginTop="20dp"
        android:text="@string/home2"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/subhead"
        app:layout_constraintTop_toBottomOf="@id/subhead"
        android:textColor="?attr/textAppearanceBody1"
        android:layout_marginTop="20dp"
        android:text="@string/home3"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>